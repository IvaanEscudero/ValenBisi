<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:forceDarkAllowed="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/incident_stationtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/worksans"
            android:gravity="center"
            android:text="1. Plaza del mercado - Taula de canvis"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/worksans"
                    android:gravity="start"
                    android:text="Título incidencia" />

                <EditText
                    android:id="@+id/incident_editabletitle"
                    android:layout_width="240dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/spinner_background"
                    android:fontFamily="@font/worksans"
                    android:hint="@string/titulo_incidencia"
                    android:paddingStart="10dp"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

            <ImageView
                android:id="@+id/incident_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/camera_color"
                tools:ignore="ImageContrastCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/worksans"
                android:text="Descripción" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="360dp"
                android:layout_height="233dp"
                android:layout_gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/incident_detail_description"
                    android:layout_width="360dp"
                    android:layout_height="225dp"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:background="@drawable/spinner_background"
                    android:fontFamily="@font/worksans"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans"
                        android:gravity="left"
                        android:text="Estado" />

                    <Spinner
                        android:id="@+id/spinner"
                        style="@style/SpinnerTextStyle"
                        android:layout_width="360dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="360dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/worksans"
                        android:gravity="left"
                        android:text="Tipo" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="360dp"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_background" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Toolbar personalizada -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextAppearance="@style/TituloStyle2"
            android:background="@color/light_purple"
            app:title="New Report" /> <!-- Aquí puedes definir el título también -->

    </com.google.android.material.appbar.AppBarLayout>
</androidx.constraintlayout.widget.ConstraintLayout>